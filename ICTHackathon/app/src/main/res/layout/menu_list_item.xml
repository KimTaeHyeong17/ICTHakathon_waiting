<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageview_menu"
        android:layout_width="121dp"
        android:layout_height="match_parent"
        android:background="#B69595" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingVertical="11dp"
        android:paddingLeft="16dp">

        <!--제목-->
        <TextView
            android:maxLines="2"
            android:id="@+id/menu_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:letterSpacing="-0.02"
            android:text="Garlic Sizzling Rice\asdasdwadawdawdawdawd"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!--메뉴가격-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <!--한국돈-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:letterSpacing="-0.02"
                android:text="KW "
                android:textColor="#ff5c00"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/menu_list_item_KW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="33dp"
                android:gravity="center"
                android:text="12000원"
                android:textColor="@color/colorPrimaryDark" />

            <!--외화-->
            <TextView
                android:id="@+id/menu_list_item_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:letterSpacing="-0.02"
                android:text="@string/currency"
                android:textColor="#ff5c00"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/menu_list_item_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="12000원"
                android:textColor="@color/colorPrimaryDark" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <!--별점-->
            <RatingBar
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:numStars="1"
                android:rating="1"
                android:stepSize="1"
                android:theme="@style/RatingBar" />

            <TextView
                android:id="@+id/menu_list_item_star_rating"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4.3"
                android:textColor="@color/colorPrimaryDark" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/ic_comment" />

            <TextView
                android:id="@+id/menu_list_item_comment_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.02"
                android:text="1"
                android:textColor="#000000" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>